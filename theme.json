{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "settings": {
    "layout": {
      "contentSize": "960px",
      "wideSize": "1280px"
    },
    "color": {
      "palette": [
        {
          "name": "Base",
          "slug": "base",
          "color": "#FFFFFF"
        },
        {
          "name": "Base Hover",
          "slug": "base-hover",
          "color": "#F4F4F5"
        },
        {
          "name": "Base Pressed",
          "slug": "base-pressed",
          "color": "#E4E4E7"
        },
        {
          "name": "Primary",
          "slug": "primary",
          "color": "#3B82F6"
        },
        {
          "name": "Primary Hover",
          "slug": "primary-hover",
          "color": "#2563EB"
        },
        {
          "name": "Dark",
          "slug": "dark",
          "color": "#18181B"
        },
        {
          "name": "Subtle",
          "slug": "subtle",
          "color": "#52525B"
        },
        {
          "name": "Muted",
          "slug": "muted",
          "color": "#71717A"
        },
        {
          "name": "Highlight",
          "slug": "highlight",
          "color": "#EFF6FF"
        },
        {
          "name": "Error",
          "slug": "error",
          "color": "#E11D48"
        },
        {
          "name": "Danger",
          "slug": "danger",
          "color": "#BE123C"
        }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "slug": "sans",
          "fontFamily": "\"Inter\", ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, \"Segoe UI\", Roboto, \"Helvetica Neue\", Arial, \"Noto Sans\", sans-serif, \"Apple Color Emoji\", \"Segoe UI Emoji\", \"Segoe UI Symbol\", \"Noto Color Emoji\"",
          "name": "Inter"
        },
        {
          "slug": "mono",
          "fontFamily": "\"Roboto Mono\", ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, \"Liberation Mono\", \"Courier New\", monospace",
          "name": "Roboto Mono"
        }
      ],
      "fontSizes": [
        {
          "name": "Extra Small",
          "slug": "xs",
          "size": "0.75rem"
        },
        {
          "name": "Small",
          "slug": "sm",
          "size": "0.8125rem"
        },
        {
          "name": "Medium",
          "slug": "md",
          "size": "0.875rem"
        },
        {
          "name": "Base",
          "slug": "base",
          "size": "15px"
        },
        {
          "name": "Large",
          "slug": "lg",
          "size": "1.125rem"
        },
        {
          "name": "Display Small",
          "slug": "2xl",
          "size": "1.5rem"
        },
        {
          "name": "Display Medium",
          "slug": "3xl",
          "size": "2.5rem"
        },
        {
          "name": "Display Large",
          "slug": "4xl",
          "size": "3.5rem"
        },
        {
          "name": "Display Extra Large",
          "slug": "5xl",
          "size": "4rem"
        },
        {
          "name": "Display 6XL",
          "slug": "6xl",
          "size": "4.5rem"
        },
        {
          "name": "Display 7XL",
          "slug": "7xl",
          "size": "5.5rem"
        },
        {
          "name": "Display 8XL",
          "slug": "8xl",
          "size": "6.5rem"
        },
        {
          "name": "Display 9XL",
          "slug": "9xl",
          "size": "8rem"
        }
      ]
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--base)",
      "text": "var(--wp--preset--color--dark)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--sans)",
      "fontSize": "15px",
      "lineHeight": "24px"
    },
    "elements": {
      "heading": {
        "color": {
          "text": "var(--wp--preset--color--dark)"
        },
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--sans)",
          "fontWeight": "500"
        }
      },
      "h1": {
        "typography": {
          "fontSize": "40px",
          "lineHeight": "48px",
          "fontWeight": "500"
        }
      },
      "h2": {
        "typography": {
          "fontSize": "34px",
          "lineHeight": "42px",
          "fontWeight": "500"
        }
      },
      "h3": {
        "typography": {
          "fontSize": "2.5rem",
          "lineHeight": "2.75rem",
          "fontWeight": "500"
        }
      },
      "h4": {
        "typography": {
          "fontSize": "1.5rem",
          "lineHeight": "1.875rem",
          "fontWeight": "500"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--primary)"
        }
      },
      "code": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--mono)",
          "fontSize": "0.75rem",
          "lineHeight": "1.2rem"
        }
      }
    }
  }
}
